{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": "./src",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "lib": ["es2018", "dom"]
    },
    "include": ["src/**/*.ts", "src/types/*"],
    "exclude": ["node_modules"]
  }
  